@using BlazorServerApp.Components.Card.Model
@inject IJSRuntime JSRuntime;

<link href="/css/styles.css" rel="stylesheet" type="text/css">

<input type="text"
       class="@((!string.IsNullOrEmpty(Model.Value) && IsDisabled ? "disabled_card" : string.Empty))"
       value="@Model.Value"
       @oninput="@((ChangeEventArgs value) => Model.SetValue(value))"
       @onblur="HandleBlur"
       @onclick="HandleClick" />

@code {
    [Parameter]
    public CardModel Model { get; set; }

    private bool IsDisabled { get; set; }

    public void HandleBlur()
    {
        IsDisabled = true;
    }

    public void HandleClick()
    {
        IsDisabled = false;
    }
}
