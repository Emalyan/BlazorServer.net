<CardWrapper>
    @if (IsAddCart)
    {
        <AppendCard HandleClick="AddCard" />
    }
    else
    {
        <CardInput />
    }
</CardWrapper>

@code {
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public bool IsAddCart { get; set; }

    [Parameter]
    public EventCallback AddCard { get; set; }

}
